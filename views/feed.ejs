<% include ./partials/header.ejs %>

    <div class="w-full min-h-screen px-10 py-8">
        <div class="cards flex flex-wrap gap-10">

            <% posts.forEach((elem) => { %>
            <div class="card w-32">
                <div class="w-full h-40 bg-zinc-500 rounded-lg overflow-hidden">
                    <img class="w-full h-full object-cover rounded-lg" src="../images/uploads/<%=elem.image %>" alt="">
                </div>
                <a href="/show/post/<%= elem._id %>" class="inline-block mt-2 text-sm"> <%= elem.title %> </a>
                  <h6 class="text-xs font-semibold opacity-50"> @<%= elem.user.username%> </h6>
            </div>
            <% }) %>
        </div>
    </div>

<% include ./partials/footer.ejs %>