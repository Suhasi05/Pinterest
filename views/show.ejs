<% include ./partials/header.ejs %>

    <div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
        <div class="cards flex flex-wrap gap-10">

            <% user.posts.forEach((elem) => { %>
            <div class="card w-32">
                <div class="w-full h-40 bg-zinc-500 rounded-lg">
                    <img class="w-full h-full object-cover rounded-lg" src="../images/uploads/<%=elem.image %>" alt="">
                </div>
                <a href="/show/post/<%= elem._id %>" class="inline-block mt-2 text-sm"> <%= elem.title %> </a>
            </div>
            <% }) %>

            
        </div>
    </div>

<% include ./partials/footer.ejs %>