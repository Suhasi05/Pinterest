<% include ./partials/header.ejs %>

    <div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
        <h1 text-xl>Create a New Post</h1>
        <hr class="opacity-10 mt-3">
        <form action="/createpost" method="post" enctype="multipart/form-data">
            <input class="block w-1/3 px-3 py-2 " type="file" name="postimage" >
            <input class="block w-1/3 px-3 py-2 text-black border-2 rounded-md mt-2 " type="text" name="title" placeholder="Title">
            <textarea class="block h-60 w-1/3 px-3 text-black py-2 border-2 rounded-md mt-2 " type="text" name="description" placeholder="Description"> </textarea>
            <input class="block w-1/3 px-3 py-2 rounded-md mt-2 bg-yellow-500 text-black" type="submit" value="Post">
        </form>
    </div>


